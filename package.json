{
    "name": "er-climate-monitor-frontend",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "build": "run-p type-check \"build-only {@}\" --",
        "test:unit": "vitest",
        "lint": "eslint . --fix",
        "build-only": "vite build",
        "dev": "vite",
        "format": "prettier --write src/",
        "format:check": "prettier --check .",
        "precommit": "npm run lint-staged && npm test && npm run build",
        "prepare": "husky",
        "preview": "vite preview",
        "type-check": "vue-tsc --build",
        "prelint-staged": "node -e \"if (parseFloat(process.version.slice(1)) < 22) { console.error('Node.js >= 22.0 is required'); process.exit(1); }\""
    },
    "dependencies": {
        "@vueuse/core": "^12.4.0",
        "autoprefixer": "^10",
        "axios": "^1.7.9",
        "js-logger": "^1.6.1",
        "chart.js": "^4.4.7",
        "leaflet": "^1.9.4",
        "pinia": "^2.3.0",
        "postcss": "^8",
        "tailwindcss": "^3",
        "vue": "^3.5.13",
        "vue-router": "^4.5.0"
    },
    "devDependencies": {
        "@tsconfig/node22": "^22.0.0",
        "@types/jsdom": "^21.1.7",
        "@types/leaflet": "^1.9.16",
        "@types/node": "^22.10.2",
        "@vitejs/plugin-vue": "^5.2.1",
        "@vitest/eslint-plugin": "1.1.20",
        "@vue/eslint-config-prettier": "^10.1.0",
        "@vue/eslint-config-typescript": "^14.1.3",
        "@vue/test-utils": "^2.4.6",
        "@vue/tsconfig": "^0.7.0",
        "eslint": "^9.14.0",
        "eslint-plugin-vue": "^9.30.0",
        "husky": "^9.1.7",
        "jsdom": "^25.0.1",
        "json-server": "^0.17.4",
        "npm-run-all2": "^7.0.2",
        "prettier": "^3.3.3",
        "typescript": "~5.6.3",
        "vite": "^6.0.5",
        "vite-plugin-vue-devtools": "^7.6.8",
        "vitest": "^2.1.8",
        "vue-cli-plugin-tailwind": "~3.0.0",
        "vue-tsc": "^2.1.10"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx,vue}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.json": [
            "prettier --write"
        ],
        "*.md": [
            "prettier --write"
        ]
    },
    "engines": {
        "node": ">=22.0.0"
    },
    "type": "module"
}
